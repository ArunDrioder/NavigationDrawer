<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/channel_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:paddingRight="@dimen/_3sdp">

            <ImageView
                android:id="@+id/image_channel"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/noimage"
                android:scaleType="fitXY"
                android:alpha="0.7"
                />
            <TextView
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginLeft="@dimen/_151sdp"
                android:background="@color/white"/>
            <LinearLayout
                android:id="@+id/menu_layout"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_120sdp"
                android:background="@drawable/text_effect"
                android:gravity="top">

                <ImageView
                    android:id="@+id/menu_drop"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/menu_drop"/>
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:background="@color/black"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="@dimen/_9sdp"
                    android:src="@drawable/red_round"/>
                <TextView
                    android:id="@+id/channel_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:maxLength="20"
                    android:text="NDTV News today"/>

            </LinearLayout>
            <TextView
                android:id="@+id/channel_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIVE : NDTV"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/white"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>