<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".activity.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/white"
        android:gravity="left|center">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/back_arrow"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/text_effect"
            android:gravity="center">
            <ImageView
                android:id="@+id/backarrow"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:src="@drawable/arrow_pink" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROFILE"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="@dimen/_25sdp"/>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/profilelinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_170sdp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical">




            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_85sdp"
                android:id="@+id/profile_image"
                android:layout_gravity="center"
                android:src="@drawable/prof"
                android:layout_marginLeft="@dimen/_110sdp"/>

            <ImageView
                android:id="@+id/profpic_edit"
                android:layout_width="@dimen/_20sdp"

                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/profpic_edit"
                android:layout_marginLeft="@dimen/_175sdp"/>


        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:text="USERNAME"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />




        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:gravity="center">

        <ImageView
            android:id="@+id/edit_icon"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginLeft="@dimen/_260sdp"
            android:layout_marginTop="@dimen/_60sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/text_effect"
            android:gravity="center"
            android:src="@drawable/profile_edit"
            android:visibility="visible" />
        </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/profile_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_11sdp"

            android:orientation="vertical"
            android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"


            android:orientation="horizontal">


        <TextView
            android:id="@+id/emaillabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Email             :"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp" />


        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="arunprasadh.s@gmail.com"
            android:gravity="right"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@color/re_send_dull"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"

            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"

            android:orientation="horizontal">

        <TextView
            android:id="@+id/mobilenumberlabel"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Mobile No     :"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp" />


        <TextView
            android:id="@+id/mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7402191727"
            android:gravity="right"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_2sdp"

            android:background="@color/re_send_dull"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"

            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"

            android:orientation="horizontal">


        <TextView
            android:id="@+id/refflabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Reffered By  :"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp" />


        <TextView
            android:id="@+id/refer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Direct User"
            android:gravity="right"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_2sdp"

            android:layout_height="@dimen/_1sdp"
            android:background="@color/re_send_dull"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"

            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"

            android:orientation="horizontal">

        <TextView
            android:id="@+id/genderlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Gender          :"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Male"
            android:gravity="right"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_2sdp"

            android:layout_height="@dimen/_1sdp"
            android:background="@color/re_send_dull"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"

            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"

            android:orientation="horizontal">

        <TextView
            android:id="@+id/doblabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Date Of Birth:"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="11/12/1993"
            android:gravity="right"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_2sdp"

            android:layout_height="@dimen/_1sdp"
            android:background="@color/re_send_dull"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"

            android:layout_marginRight="@dimen/_15sdp"

            android:orientation="horizontal">

        <TextView
            android:id="@+id/panlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Pan No          :"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/pan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="123456789"
            android:gravity="right"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_2sdp"

            android:layout_height="@dimen/_1sdp"
            android:background="@color/re_send_dull"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"


            android:orientation="horizontal">


        <TextView
            android:id="@+id/adhaarlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Adhaar No    :"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/adhaar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="692484386284"
            android:gravity="right"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_2sdp"

            android:layout_height="@dimen/_1sdp"
            android:background="@color/re_send_dull"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"

            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"

            android:orientation="horizontal">

        <TextView
            android:id="@+id/voterlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Voter ID         :"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/voterID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1ALQ67BLM6R1Q"
            android:gravity="right"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>